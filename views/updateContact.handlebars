<div class="row my-4">
  <div class="col-md-8 mx-auto">
    <h3>Modifier un Contact</h3>
    <div class="card p-3">
      <form action="/update/{{contact._id}}" method="POST">
        <div class="form-group p-2">
          <input
            type="text"
            value="{{contact.name}}"
            name="name"
            placeholder="nom & prenom"
            class="form-control"
          />
        </div>
        <div class="form-group p-2">
          <input
            type="text"
            name="phone"
            value="{{contact.phone}}"
            placeholder="Tel"
            class="form-control"
          />
        </div>
        <div class="form-group p-2">
          <button type="submit" class="btn btn-primary">Valider</button>
        </div>
      </form>
    </div>
  </div>

</div>