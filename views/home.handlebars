<div class="row my-4">
  <div class="col-md-12">
    <div class="card shadow-sm rounded-0">
      <div class="table-responsive">
        <table class="table table-primary">
          <thead>
            <tr>
              <th scope="col">Nom & Prenom</th>
              <th scope="col">Tel</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each contacts}}
              <tr>
                <td>{{name}}</td>
                <td>{{phone}}</td>
                <td>
                  <a href="/update/{{_id}}" class="btn btn-warning">
                    <i class="fa fa-edit"></i>
                  </a>
                  <a href="/delete/{{_id}}" class="btn btn-danger">
                    <i class="fa fa-trash"></i>
                  </a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>